@model YabousNews.Data.Models.ContactUs

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<hr />

<section class="homecontact">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 wow fadeInUp animated animated" data-wow-duration="1s" data-wow-delay="1.1s" style="visibility: visible; animation-duration: 1s; animation-delay: 1.1s; animation-name: fadeInUp;">
                <h3 class="titleproject"> اتصل بنا </h3>
                <img class="lineproject" src="img/line.png" alt="">
                <p class="textproject"> لقد تم توليد النص من مولد النص العربي ويمكن ان تستبدل في نفس المساحة .  </p>
            </div>
        </div>
        <div class="row topdivcontact wow fadeInUp animated animated" data-wow-duration="1s" data-wow-delay="1.1s" style="visibility: visible; animation-duration: 1s; animation-delay: 1.1s; animation-name: fadeInUp;">
            <div class="col-lg-4">
                <div class="divcontact">
                    <i class="fa fa-map-marker" style="font-size: 69px;margin-top: 20px;"></i>
                    <h3 class="title-size-page-contact"> العنوان </h3>
                    <p class="font-size-page-contact">  المملكة العربية السعودية</p>
                    <p class="font-size-page-contact">  المملكة العربية السعودية</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="divcontact">
                    <i class="fa fa-headphones" aria-hidden="true" style="font-size: 69px;margin-top: 20px;"></i>
                    <h3 class="title-size-page-contact"> الهاتف </h3>
                    <p class="font-size-page-contact">  +966 561096415</p>
                    <p class="font-size-page-contact">  +966 561096415</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="divcontact">
                    <i class="fa fa-envelope" aria-hidden="true" style="font-size: 61px; padding-bottom: 8px;margin-top: 20px;"></i>
                    <h3 class="title-size-page-contact"> البريد الاكتروني </h3>
                    <p class="font-size-page-contact">info@wsoft-tech.com  </p>
                    <p class="font-size-page-contact"> info@wsoft-tech.com  </p>
                </div>
            </div>
        </div>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row wow fadeInUp animated animated" data-wow-duration="1s" data-wow-delay="1.1s" style="visibility: visible; animation-duration: 1s; animation-delay: 1.1s; animation-name: fadeInUp;">
                <div class="col-lg-6 mb-4">
                    <div class="form-group">
                        <input asp-for="FName" type="text" class="form-control" id="#" aria-describedby="#" placeholder="الاسم الاول" required="">
                        <span asp-validation-for="FName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 mb-4">
                    <div class="input-group">
                        <input asp-for="LName" type="text" class="form-control" id="#" aria-describedby="#" placeholder="الاسم الاخير" required="">
                        <span asp-validation-for="LName" class="text-danger"></span>
                    </div>
                </div>

            </div>

            
            <div class="row wow fadeInUp animated animated" data-wow-duration="1s" data-wow-delay="1.1s" style="visibility: visible; animation-duration: 1s; animation-delay: 1.1s; animation-name: fadeInUp;">

                <div class="col-lg-6 mb-4">
                    <div class="form-group">
                        <input asp-for="Phonenamber" type="text" class="form-control" id="#" aria-describedby="#" placeholder="الاسم الاخير" required="">
                        <span asp-validation-for="Phonenamber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 mb-4">
                    <div class="input-group">
                        <input asp-for="Email" type="email" class="form-control" id="#" aria-describedby="#" placeholder="البريد الالكتروني" required="">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row wow fadeInUp animated animated" data-wow-duration="1s" data-wow-delay="1.1s" style="visibility: visible;animation-duration: 1s;animation-delay: 1.1s;animation-name: fadeInUp;text-align: center;">
                <div class="col-lg-12">
                    <textarea asp-for="Comment" type="email" class="form-control" id="#" aria-describedby="#" placeholder="التعليق" required=""></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

            </div>

            <input type="submit" value="إرسال" class="wpcf7-form-control wpcf7-submit">
        </form>

    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
