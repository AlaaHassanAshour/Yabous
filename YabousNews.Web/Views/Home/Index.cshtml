                                <span class="span-date"> @item.CreatedAt</span>
                                <a href="/News/Details/@item.Id" class="h3-new-1">
                                    @Html.Raw(item.Details)
                                </a>

                                <div class="social-new1">
                                    <a href="https://www.facebook.com/sharer/sharer.php?u=@enc" target="_blank">
                                        <div class="fac">
                                            <i class="fa fa-facebook" aria-hidden="true"></i>
                                        </div>
                                    </a>

                                    <a href="https://twitter.com/intent/tweet?url=@enc&News/Details/@item.Id" target="_blank">
                                        <div class="twi">
                                            <i class="fa fa-twitter" aria-hidden="true"></i>
                                        </div>
                                    </a>


                                </div>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
            //break;
        }
    </div>
</div>


