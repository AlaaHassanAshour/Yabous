@model YabousNews.Web.ViewModels.IndexVM
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Home Page";
}
@{
    string currentUrl = Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.Path;
    string enc = System.Net.WebUtility.UrlEncode(currentUrl);


}
<div class="container">

    <div class="row background-new-1">



        @foreach (var item in Model.News.Where(x => x.NewsCategoryId == 2).OrderByDescending(i => i.UpdatedAt).Take(3))
        {
            <div class="splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide">
                            <div class="col-md-5 padding-right-0">
                                <div class="about_module">
                                    <img class="img-new-1" src="~/Images/@item.Image" style=" width: 100%;" alt="صورة">
                                </div>
                            </div>
                            <div class="col-md-6">
