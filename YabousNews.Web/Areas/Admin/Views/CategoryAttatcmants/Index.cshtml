@model IEnumerable<YabousNews.Data.Models.CategoryAttatcmant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<p>
    <a href="Admin/CategoryAttatcmants/Create" class="btn btn-light-primary font-weight-bolder btn-sm">
        <i class="fa fa-plus-square"></i>
        <span>إضافة تصنيف جديد</span>
    </a>
</p>
<table class="table content">
    <thead>
        <tr>
            <th>
              اسم التصنيف
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="Admin/CategoryAttatcmants/Edit/@item.Id">Edit</a> |
                    <a href=" Admin/CategoryAttatcmants/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
