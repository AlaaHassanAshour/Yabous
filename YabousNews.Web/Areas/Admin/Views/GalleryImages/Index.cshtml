@model IEnumerable<YabousNews.Data.Models.GalleryImages>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<br />
<p>
    <a href="Admin/GalleryImages/Create" class="btn btn-light-primary font-weight-bolder btn-sm">
        <i class="fa fa-plus-square"></i>
        <span>إضافة صورة جديد</span>
    </a>
</p>


<table class="table m-table m-table--head-separator-primary content" >
    <thead>
        <tr>
            <th>
                الصورة
            </th>
            <th>
                المعرض
            </th>
            <th>
                حذف
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        

           

        

        @foreach (var item in Model)
        {
            


        <tr>
            <td>
                <img src="~/Images/@item.Image" width="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gallery.Title)
            </td>
            <td>
                <a href="/Admin/GalleryImages/Delete/@item.Id" class="btn btn-bg-danger">حذف</a>
            </td>




            @*
        <td>
            <a href="/Admin/GalleryImages/Edit/@item.GalleryImages.">تعديل</a> |

            <a href="/Admin/GalleryImages/Delete/@item.GalleryImages.Id">حذف</a>
        </td>
            *@
        </tr>
        }
    </tbody>
</table>
