@model YabousNews.EditAttachmentDTO

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<form method="post" action="/Admin/Attachment/Edit/@Model.Id" onsubmit="return jQueryModalPostForms(this);">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Title" class="control-label">
                    اسم الإصدار
                    <span style="color:#ff0000">*</span>
                </label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="File" class="control-label">
                    الملف
                    <span style="color:#ff0000">*</span>
                </label>
                <input name="file" type="file" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="حفظ" class="btn btn-primary" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">إلغاء الامر</button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />
